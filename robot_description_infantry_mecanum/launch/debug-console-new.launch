<?xml version="1.0"?>
<launch>
	<param name="robot_description" textfile="$(find robot_description_infantry_mecanum)/xacro/urdf/robot.urdf" />
	<rosparam command="load" file="$(find robot_description_infantry_mecanum)/config/controllers.yaml" />
	<rosparam command="load" file="$(find robot_description_infantry_mecanum)/config/hardware_description.yaml" />
	<rosparam command="load" file="$(find robot_description_infantry_mecanum)/config/sensor_imu.yaml" />
    <rosparam command="load" file="$(find robot_description_infantry_mecanum)/config/rm_control_infantry.yaml" />
	<rosparam command="load" file="$(find robot_description_infantry_mecanum)/config/camera.yaml" />
    <!-- <node name="sensor_imu" pkg="sensor_imu" type="main.py" output="screen"/> -->
	<node name="robot_control" pkg="robot_control" type="robot_control_node" output="screen" />
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
	<node name="controller_manager" pkg="controller_manager" type="controller_group" args="spawn real_robot"/>
    <node name="rm_control_infantry" pkg="rm_control_infantry" type="entry.py" output="screen"/>
	<!-- <node name="v4l2" pkg="usb_cam" type="usb_cam_node" output="screen"/> -->
	<node name="hik_camera" pkg="hik_camera" type="hik_camera_node" output="screen">
		<param name="camera_info_url" type="string" value="file://$(find robot_description_infantry_mecanum)/config/camera_calibration/hik_camera.yaml" />
	</node>
</launch>